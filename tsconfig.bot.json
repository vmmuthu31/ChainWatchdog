{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "outDir": "dist",
    "target": "ES2020",
    "esModuleInterop": true,
    "sourceMap": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["lib/telegram-bot/**/*", "lib/utils/**/*", "lib/services/**/*"],
  "exclude": ["node_modules"]
}
